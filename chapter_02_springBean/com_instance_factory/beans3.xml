<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--配置工厂-->
    <bean id="myBean3Factory"
          class="chapter_02_springBean.com_instance_factory.MyBean3Factory" />
    <!--使用factory-bean属性指向配置的实例化工厂-->
    <!--使用factory-method属性确定使用工厂中的哪个方法-->
    <bean id="bean3" factory-bean="myBean3Factory"
    factory-method="createBean" />
   <!--  **********************  -->

    <bean id="myCar3Factory" class="chapter_02_springBean.com_instance_factory.MyCar3Factory" />

    <bean id="car3" factory-bean="myCar3Factory" factory-method="createCar3" />
</beans>